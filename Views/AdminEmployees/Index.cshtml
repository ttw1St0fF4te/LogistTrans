@model IEnumerable<LogistTrans.Models.Employee>

<h2>Сотрудники</h2>

<table class="table">
    <thead>
    <tr>
        <th>Фамилия</th>
        <th>Имя</th>
        <th>Отчество</th>
        <th>Телефон</th>
        <th>Логин</th>
        <th>Действия</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var employee in Model)
    {
        <tr>
            <td>@employee.LastName</td>
            <td>@employee.FirstName</td>
            <td>@employee.MiddleName</td>
            <td>@employee.Phone</td>
            <td>@employee.Login.Login</td>
            <td>
                <a asp-action="Delete" asp-route-id="@employee.Id" class="btn btn-danger btn-sm">Удалить</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<p>
    <a asp-action="Create" class="btn btn-primary">Добавить нового сотрудника</a>
</p>