@model LogistTrans.Models.Employee

@{
ViewData["Title"] = "Добавить сотрудника";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Добавить сотрудника</h2>
    <form asp-action="Create" method="post" class="needs-validation" novalidate>
        <!-- Поле Фамилия -->
        <div class="mb-3">
            <label asp-for="LastName" class="form-label">Фамилия</label>
            <input asp-for="LastName" class="form-control" required />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <!-- Поле Имя -->
        <div class="mb-3">
            <label asp-for="FirstName" class="form-label">Имя</label>
            <input asp-for="FirstName" class="form-control" required />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <!-- Поле Отчество -->
        <div class="mb-3">
            <label asp-for="MiddleName" class="form-label">Отчество</label>
            <input asp-for="MiddleName" class="form-control" />
            <span asp-validation-for="MiddleName" class="text-danger"></span>
        </div>

        <!-- Поле Телефон -->
        <div class="mb-3">
            <label asp-for="Phone" class="form-label">Телефон</label>
            <input asp-for="Phone" class="form-control" required />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>

        <!-- Поле Логин -->
        <div class="mb-3">
            <label asp-for="LoginId" class="form-label">Логин</label>
            <select asp-for="LoginId" class="form-select" required>
                <option value="" disabled selected>Выберите логин</option>
                @foreach (var login in ViewBag.LoginId)
                {
                <option value="@login.Value">@login.Text</option>
                }
            </select>
            <span asp-validation-for="LoginId" class="text-danger"></span>
        </div>

        <!-- Кнопка отправки -->
        <div class="d-grid gap-2">
            <button type="submit" class="btn btn-primary">Добавить</button>
        </div>
    </form>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}