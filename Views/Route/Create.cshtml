@model LogistTrans.Models.Route

@{
ViewData["Title"] = "Создать маршрут";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Создать маршрут</h2>
    <form asp-action="Create" method="post" class="needs-validation" novalidate>
        <!-- Поле Заказ -->
        <div class="mb-3">
            <label asp-for="OrderId" class="form-label">Заказ</label>
            <select asp-for="OrderId" asp-items="ViewBag.OrderId" class="form-select" required>
                <option value="" disabled selected>Выберите заказ</option>
            </select>
            <span asp-validation-for="OrderId" class="text-danger"></span>
        </div>

        <!-- Поле Сотрудник -->
        <div class="mb-3">
            <label asp-for="EmployeeId" class="form-label">Сотрудник</label>
            <select asp-for="EmployeeId" asp-items="ViewBag.EmployeeId" class="form-select" required>
                <option value="" disabled selected>Выберите сотрудника</option>
            </select>
            <span asp-validation-for="EmployeeId" class="text-danger"></span>
        </div>

        <!-- Кнопка отправки -->
        <div class="d-grid gap-2">
            <button type="submit" class="btn btn-primary">Создать</button>
        </div>
    </form>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}