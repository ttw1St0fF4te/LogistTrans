@model Product

@{
ViewData["Title"] = "Добавить товар";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Добавить товар</h2>
    <form asp-action="Create" method="post" class="needs-validation" novalidate>
        <!-- Поле Название -->
        <div class="mb-3">
            <label for="Name" class="form-label">Название</label>
            <input asp-for="Name" class="form-control" id="Name" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <!-- Поле Количество -->
        <div class="mb-3">
            <label for="Quantity" class="form-label">Количество</label>
            <input asp-for="Quantity" class="form-control" id="Quantity" type="number" min="0" required />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>

        <!-- Поле Местоположение -->
        <div class="mb-3">
            <label for="Location" class="form-label">Местоположение</label>
            <input asp-for="Location" class="form-control" id="Location" required />
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>

        <!-- Кнопка отправки -->
        <div class="d-grid gap-2">
            <button type="submit" class="btn btn-primary">Сохранить</button>
        </div>
    </form>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}