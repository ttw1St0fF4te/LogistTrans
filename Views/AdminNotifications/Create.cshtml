@model LogistTrans.Models.Notification

@{
ViewData["Title"] = "Создать уведомление";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Создать уведомление</h2>
    <form asp-action="Create" method="post" class="needs-validation" novalidate>
        <!-- Поле Сообщение -->
        <div class="mb-3">
            <label asp-for="Message" class="form-label">Текст уведомления</label>
            <input asp-for="Message" class="form-control" required />
            <span asp-validation-for="Message" class="text-danger"></span>
        </div>

        <!-- Поле Клиент -->
        <div class="mb-3">
            <label asp-for="ClientId" class="form-label">Клиент</label>
            <select asp-for="ClientId" class="form-select" required>
                <option value="" disabled selected>Выберите клиента</option>
                @foreach (var client in ViewBag.ClientId)
                {
                <option value="@client.Value">@client.Text</option>
                }
            </select>
            <span asp-validation-for="ClientId" class="text-danger"></span>
        </div>

        <!-- Поле Заказ -->
        <div class="mb-3">
            <label asp-for="OrderId" class="form-label">Заказ</label>
            <select asp-for="OrderId" class="form-select" required>
                <option value="" disabled selected>Выберите заказ</option>
                @foreach (var order in ViewBag.OrderId)
                {
                <option value="@order.Value">@order.Text</option>
                }
            </select>
            <span asp-validation-for="OrderId" class="text-danger"></span>
        </div>

        <!-- Кнопка отправки -->
        <div class="d-grid gap-2">
            <button type="submit" class="btn btn-primary">Создать</button>
        </div>
    </form>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}