@model IEnumerable<LogistTrans.Models.Order>

<h2>Заказы</h2>

<table class="table">
    <thead>
    <tr>
        <th>Дата заказа</th>
        <th>Дата доставки</th>
        <th>Статус</th>
        <th>Клиент</th>
        <th>Действия</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var order in Model)
    {
        <tr>
            <td>@order.OrderDate.ToString("yyyy-MM-dd HH:mm")</td>
            <td>@order.DeliveryDate.ToString("yyyy-MM-dd HH:mm")</td>
            <td>@order.Status</td>
            <td>@order.Client.LastName</td>
            <td>
                <a asp-action="Delete" asp-route-id="@order.Id" class="btn btn-danger btn-sm">Удалить</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<p>
    <a asp-action="Create" class="btn btn-primary">Создать новый заказ</a>
</p>