@model LogistTrans.Controllers.ReportData

<h2>Отчеты</h2>

<div>
    <h3>Общая статистика</h3>
    <p>Всего продано товаров: @Model.TotalProductsSold</p>
    <p>Всего клиентов: @Model.TotalClients</p>
    <p>Активных клиентов: @Model.ActiveClients</p>
    <p>Всего водителей: @Model.TotalDrivers</p>

    <h3>Загруженность водителей</h3>
    <ul>
        @foreach (var workload in Model.DriverWorkload)
        {
            <li>Водитель @workload.DriverId: @workload.RouteCount маршрутов</li>
        }
    </ul>
</div>

<div>
    <a asp-action="ExportCsv" class="btn btn-primary">Экспортировать в CSV</a>
    <a asp-action="ExportPdf" class="btn btn-primary">Экспортировать в PDF</a>
</div>